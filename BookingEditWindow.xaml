<Window x:Class="ArisHotel.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование бронирования" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Комната:" FontSize="14" Margin="0,0,0,5"/>
        <ComboBox x:Name="cmbRoom" Grid.Row="1" FontSize="14" Margin="0,0,0,10" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomId"/>
        
        <TextBlock Grid.Row="2" Text="Имя гостя:" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="txtGuestName" Grid.Row="3" FontSize="14" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="4" Text="Дата заезда:" FontSize="14" Margin="0,0,0,5"/>
        <DatePicker x:Name="dpStartDate" Grid.Row="5" FontSize="14" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="6" Text="Дата выезда:" FontSize="14" Margin="0,0,0,5"/>
        <DatePicker x:Name="dpEndDate" Grid.Row="7" FontSize="14" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" Width="100" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="100" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
