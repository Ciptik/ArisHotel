<Window x:Class="ArisHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отель Арис — Главная" Height="700" Width="1200" WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with user info -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20,15">
            <TextBlock x:Name="txtWelcome" FontSize="18" FontWeight="Bold" 
                       Foreground="White" TextAlignment="Left"/>
        </Border>
        
        <!-- Navigation and Add button -->
        <Border Grid.Row="1" Background="White" BorderBrush="#FFBDC3C7" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Navigation buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnRoles" Content="Роли" Width="100" Height="35" 
                            FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0" 
                            Background="#FF3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnNavigation_Click"/>
                    <Button x:Name="btnUsers" Content="Пользователи" Width="120" Height="35" 
                            FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0" 
                            Background="#FF3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnNavigation_Click"/>
                    <Button x:Name="btnRooms" Content="Номера" Width="100" Height="35" 
                            FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0" 
                            Background="#FF3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnNavigation_Click"/>
                    <Button x:Name="btnBookings" Content="Бронирования" Width="130" Height="35" 
                            FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0" 
                            Background="#FF3498DB" Foreground="White" BorderThickness="0"
                            Click="BtnNavigation_Click"/>
                </StackPanel>
                
                <!-- Add button -->
                <Button x:Name="btnAdd" Grid.Column="1" Content="+ Добавить" Width="130" Height="35" 
                        FontSize="14" FontWeight="SemiBold" 
                        Background="#FF27AE60" Foreground="White" BorderThickness="0"
                        Click="BtnAdd_Click"/>
            </Grid>
        </Border>
        
        <!-- DataGrid -->
        <Border Grid.Row="2" Margin="20,20,20,10" Background="White" 
                BorderBrush="#FFBDC3C7" BorderThickness="1" CornerRadius="5">
            <DataGrid x:Name="dataGrid" Margin="0" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      Background="White"
                      BorderThickness="0"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF34495E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="#FFECF0F1"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <!-- Dynamic columns will be added in code-behind -->
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Footer with logout -->
        <Border Grid.Row="3" Background="#FFECF0F1" Padding="20,10">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock Text="Система управления отелем" FontSize="12" 
                           Foreground="#FF7F8C8D" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button Content="Выйти" Width="100" Height="30" 
                        FontSize="12" FontWeight="SemiBold"
                        Background="#FFE74C3C" Foreground="White" BorderThickness="0"
                        Click="BtnLogout_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
