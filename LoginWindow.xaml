<Window x:Class="ArisHotel.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отель Арис — Вход"
        Height="400" Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2C3E50">
        <Border Background="White" CornerRadius="10" Padding="22"
                VerticalAlignment="Center" HorizontalAlignment="Center" Height="319" >
            <StackPanel>
                <TextBlock Text="Отель Арис" FontSize="24" FontWeight="Bold" Foreground="#FF2C3E50"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                <TextBlock Text="Авторизация" FontSize="14" Foreground="#FF7F8C8D"
                           HorizontalAlignment="Center" Margin="0,0,0,18"/>

                <TextBlock Text="Имя пользователя" Margin="0,0,0,6"/>
                <TextBox x:Name="txtUsername" Height="30" MinWidth="260" Margin="0,0,0,12"/>

                <TextBlock Text="Пароль" Margin="0,0,0,6"/>
                <PasswordBox x:Name="txtPassword" Height="30" MinWidth="260" Margin="0,0,0,18"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnLogin" Content="Войти" Width="120" Height="36"
                            Click="BtnLogin_Click" Margin="0,0,12,0"
                            Background="#FF2C3E50" Foreground="White"/>
                    <Button x:Name="btnRegister" Content="Регистрация" Width="120" Height="36"
                            Click="BtnRegister_Click"
                            Background="#FF95A5A6" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
