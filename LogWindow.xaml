<Window x:Class="ArisHotel.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Журнал действий" Height="600" Width="900" WindowStartupLocation="CenterOwner"
        Background="#FFF5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF2C3E50" Padding="16,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Журнал действий" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="  — все операции с указанием времени и пользователя" Foreground="#FFECF0F1" Margin="6,2,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="16" Background="White" BorderBrush="#FFBDC3C7" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="lstLogs" FontFamily="Consolas" FontSize="13"
                         Background="White" BorderThickness="0"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#FFECF0F1" Padding="12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCopy" Content="Копировать всё" Width="140" Height="32" Margin="0,0,8,0"
                        Background="#FF3498DB" Foreground="White" BorderThickness="0" Click="BtnCopy_Click"/>
                <Button x:Name="btnSave" Content="Сохранить в файл" Width="160" Height="32" Margin="0,0,8,0"
                        Background="#FF27AE60" Foreground="White" BorderThickness="0" Click="BtnSave_Click"/>
                <Button Content="Закрыть" Width="120" Height="32" Background="#FFE74C3C" Foreground="White" BorderThickness="0"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>


