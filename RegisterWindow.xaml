<Window x:Class="ArisHotel.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#FFF7F7F7">
        <Border Background="White" CornerRadius="8" Padding="18" VerticalAlignment="Center" HorizontalAlignment="Center" Height="328">
            <StackPanel>
                <TextBlock Text="Создать аккаунт" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" HorizontalAlignment="Center"/>

                <TextBlock Text="Имя пользователя" Margin="0,0,0,6"/>
                <TextBox x:Name="txtRegUsername" Height="28" Margin="0,0,0,10"/>

                <TextBlock Text="Пароль" Margin="0,0,0,6"/>
                <PasswordBox x:Name="txtRegPassword" Height="28" Margin="0,0,0,10"/>

                <TextBlock Text="Роль" Margin="0,0,0,6"/>
                <ComboBox x:Name="cmbRoles" Height="28" Margin="0,0,0,16"
                          DisplayMemberPath="RoleName" SelectedValuePath="RoleId"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Зарегистрировать" Width="110" Height="34" Click="BtnRegister_Click" Margin="0,0,10,0" Background="#FF2C3E50" Foreground="White"/>
                    <Button Content="Отмена" Width="110" Height="34" Click="BtnCancel_Click" Background="#FF95A5A6" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
