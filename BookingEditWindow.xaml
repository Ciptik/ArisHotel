<Window x:Class="ArisHotel.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование бронирования" Height="450" Width="600" WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Информация о бронировании" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,25" Foreground="#FF2C3E50"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="0,0,0,25">
            <TextBlock Text="Комната:" FontSize="14" FontWeight="SemiBold" 
                       Margin="0,0,0,8" Foreground="#FF34495E"/>
            <ComboBox x:Name="cmbRoom" FontSize="14" Padding="10,8" 
                      BorderBrush="#FFBDC3C7" BorderThickness="2" 
                      Background="White" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomId"
                      Margin="0,0,0,15"/>
            
            <TextBlock Text="Имя гостя:" FontSize="14" FontWeight="SemiBold" 
                       Margin="0,0,0,8" Foreground="#FF34495E"/>
            <TextBox x:Name="txtGuestName" FontSize="14" Padding="10,8" 
                     BorderBrush="#FFBDC3C7" BorderThickness="2" 
                     Background="White" Margin="0,0,0,15"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Дата заезда:" FontSize="14" FontWeight="SemiBold" 
                               Margin="0,0,0,8" Foreground="#FF34495E"/>
                    <DatePicker x:Name="dpStartDate" FontSize="14" Padding="10,8" 
                               BorderBrush="#FFBDC3C7" BorderThickness="2" 
                               Background="White"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Дата выезда:" FontSize="14" FontWeight="SemiBold" 
                               Margin="0,0,0,8" Foreground="#FF34495E"/>
                    <DatePicker x:Name="dpEndDate" FontSize="14" Padding="10,8" 
                               BorderBrush="#FFBDC3C7" BorderThickness="2" 
                               Background="White"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnSave" Content="Сохранить" Width="120" Height="35" 
                    FontSize="14" FontWeight="SemiBold" Margin="0,0,15,0" 
                    Background="#FF27AE60" Foreground="White" BorderThickness="0"
                    Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="120" Height="35" 
                    FontSize="14" FontWeight="SemiBold" 
                    Background="#FFE74C3C" Foreground="White" BorderThickness="0"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
